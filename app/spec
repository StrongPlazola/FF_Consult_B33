# app.spec
# Ejecutar con: pyinstaller app.spec

block_cipher = None

a = Analysis(
    ['app/interfaz/mainWindow.py'],  # tu entry point
    pathex=[],
    binaries=[],
    datas=[
        ('app/config.json', 'app'),  # ðŸ‘ˆ incluye config.json en carpeta app
        ('app/photos/*', 'app/photos'),  # ðŸ‘ˆ incluye carpeta fotos si aplica
    ],
    hiddenimports=[],
    hookspath=[],
    runtime_hooks=[],
    excludes=[],
    win_no_prefer_redirects=False,
    win_private_assemblies=False,
    cipher=block_cipher,
)

pyz = PYZ(a.pure, a.zipped_data, cipher=block_cipher)

exe = EXE(
    pyz,
    a.scripts,
    [],
    exclude_binaries=True,
    name='SpecTrace',
    debug=False,
    bootloader_ignore_signals=False,
    strip=False,
    upx=True,
    console=False,  # ðŸ‘ˆ no se abre consola extra
    icon='app/resources/spec.ico'  # ðŸ‘ˆ tu Ã­cono
)

coll = COLLECT(
    exe,
    a.binaries,
    a.zipfiles,
    a.datas,
    strip=False,
    upx=True,
    upx_exclude=[],
    name='SpecTrace'
)